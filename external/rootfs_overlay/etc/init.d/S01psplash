#!/bin/sh

case "$1" in
  start)
    if command -v psplash >/dev/null 2>&1; then
      psplash -n &
    fi
    ;;
  stop)
    if command -v psplash-write >/dev/null 2>&1; then
      psplash-write "QUIT" || true
    fi
    killall psplash 2>/dev/null || true
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
