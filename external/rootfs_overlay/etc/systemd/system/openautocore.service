[Unit]
Description=OpenAutoCore (Android Auto headunit)
After=multi-user.target
ConditionPathExists=/opt/OpenAutoCore/openautocore

[Service]
Type=simple
WorkingDirectory=/opt/OpenAutoCore
ExecStart=/opt/OpenAutoCore/openautocore
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
