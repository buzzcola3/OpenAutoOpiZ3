[Unit]
Description=OpenAutoFlutter (flutter-pi)
After=multi-user.target
ConditionPathExists=/opt/OpenAutoFlutter/flutter-pi
ConditionPathExists=/opt/OpenAutoFlutter/app.so

[Service]
Type=simple
WorkingDirectory=/opt/OpenAutoFlutter
Environment=LD_LIBRARY_PATH=/opt/OpenAutoFlutter
ExecStart=/opt/OpenAutoFlutter/flutter-pi --release /opt/OpenAutoFlutter
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
